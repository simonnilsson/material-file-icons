{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "outDir": "./dist",
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}